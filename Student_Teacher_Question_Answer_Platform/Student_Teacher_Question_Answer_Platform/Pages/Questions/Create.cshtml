@page
@model Student_Teacher_Question_Answer_Platform.Pages.Questions.CreateModel
@{
    ViewData["Title"] = "Create Question";
}

<h1>Create Question</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Question.Title"></label>
        <input asp-for="Question.Title" class="form-control" />
        <span asp-validation-for="Question.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Question.Content"></label>
        <textarea asp-for="Question.Content" class="form-control"></textarea>
        <span asp-validation-for="Question.Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
