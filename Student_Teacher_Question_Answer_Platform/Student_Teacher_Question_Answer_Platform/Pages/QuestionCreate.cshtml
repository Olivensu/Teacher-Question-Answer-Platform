@page
@model Student_Teacher_Question_Answer_Platform.Pages.QuestionCreateModel
@{
}
<h1>Create Question</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="StudentQuestions.UserName"></label>
        <input asp-for="StudentQuestions.UserName" class="form-control" />
        <span asp-validation-for="StudentQuestions.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudentQuestions.Title"></label>
        <input asp-for="StudentQuestions.Title" class="form-control" />
        <span asp-validation-for="StudentQuestions.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudentQuestions.Content"></label>
        <textarea asp-for="StudentQuestions.Content" class="form-control"></textarea>
        <span asp-validation-for="StudentQuestions.Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}